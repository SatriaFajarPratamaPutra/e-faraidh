<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB">

    <RelativeLayout
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/headerchat"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/header"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrowback"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="349dp"
            android:id="@+id/arrowback"/>

        <ImageView
            android:layout_width="39.41dp"
            android:layout_height="40.4dp"
            android:src="@drawable/pp1"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="303.59dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hauora"
            android:text="riska"
            android:textStyle="bold"
            android:layout_marginTop="48dp"
            android:paddingLeft="100dp"
            android:paddingRight="200dp"
            android:textSize="16dp"
            android:textColor="@color/fontradiobutton"
            android:id="@+id/pp1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hauora"
            android:text="Last seen 10 minutes ago"
            android:textStyle="bold"
            android:layout_marginTop="70dp"
            android:paddingLeft="100dp"
            android:paddingRight="5dp"
            android:textSize="12dp"
            android:textColor="@color/fontversi"
            android:id="@+id/spp1"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/titiktiga"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="349dp"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bubblechat1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="138dp"
            android:layout_marginRight="137dp"
            android:id="@+id/bc1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bubblechat2"
            android:layout_below="@id/bc1"
            android:layout_marginLeft="134dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="23dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hauora"
            android:layout_below="@id/header"
            android:text="Halo kak, semangat selalu ya. Perkataan orang memang jahat, lebih baik abaikan saja."
            android:layout_marginTop="28dp"
            android:paddingLeft="53dp"
            android:paddingRight="155dp"
            android:textColor="@color/fontmateri"
            android:textAlignment="textStart"
            android:textSize="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hauora"
            android:layout_below="@id/bc1"
            android:text="Baik kak, terima kasih banyak atas sarannya."
            android:layout_marginTop="26dp"
            android:paddingLeft="149dp"
            android:paddingRight="59dp"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:textSize="12dp"/>

        <EditText
            android:layout_width="295dp"
            android:layout_height="46dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="54dp"
            android:background="@drawable/input2"
            android:layout_marginTop="715dp"
            android:hint="Pesan"
            android:textColorHint="#8897AE"
            android:inputType="text"
            android:textSize="14dp"
            android:id="@+id/input_1"
            android:paddingStart="15dp"
            android:paddingEnd="80dp"/>

        <ImageButton
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/sendicon"
            android:layout_marginTop="715dp"
            android:layout_marginLeft="328dp"
            android:layout_marginRight="21dp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>