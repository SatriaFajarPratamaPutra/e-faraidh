<?xml version="1.0" encoding="utf-8"?>
<!-- Elemen utama: ConstraintLayout digunakan untuk manajemen tata letak yang fleksibel -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8195F4"> <!-- Warna latar belakang untuk aktivitas onboarding -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ob1"
        android:clipToOutline="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="201dp">

        <TextView
            android:id="@+id/textonboard1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="550dp"
            android:fontFamily="@font/sorabold"
            android:paddingLeft="29dp"
            android:paddingRight="107dp"
            android:text="Pusing mengatur
            pembagian warisan?"
            android:textColor="@color/bg_blue"
            android:textSize="24dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/selanjutnya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textonboard2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="41dp"
            android:layout_marginRight="20dp"
            android:width="353dp"
            android:backgroundTint="@color/bg_blue"
            android:fontFamily="@font/sorasemibold"
            android:text="Selanjutnya"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textonboard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textonboard1"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/sora"
            android:paddingLeft="29dp"
            android:paddingRight="68dp"
            android:text="Tidak paham atau kurang paham
dengan ilmu waris?"
            android:textColor="@color/fontmateri"
            android:textSize="18dp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/selanjutnya"
            android:layout_marginLeft="173dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="170dp"
            android:fontFamily="@font/sora"
            android:text="@string/lewati"
            android:textColor="@color/bg_blue"
            android:textSize="14dp"
            android:textStyle="normal"
            android:id="@+id/idlewati"/>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
