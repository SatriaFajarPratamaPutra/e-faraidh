                android:textStyle="normal" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text2"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/sorabold"
                android:paddingLeft="21.5dp"
                android:paddingRight="21.5dp"
                android:text="Video Terkait"
                android:textColor="@color/fontmateri"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imgmateri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text3"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/videomateribab1" />

            <ImageView
                android:id="@+id/materi1"
