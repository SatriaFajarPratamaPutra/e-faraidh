                android:text="@string/materi5"
                android:textColor="@color/fontsubbabmateri"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text14"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sorabold"
                android:paddingLeft="37dp"
                android:paddingRight="20dp"
                android:text="Sebab - sebab warisan ada tiga yaitu:"
                android:textColor="@color/fontsubbabmateri"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="770dp"
                android:fontFamily="@font/sora"
                android:justificationMode="inter_word"
                android:paddingLeft="37dp"
                android:paddingRight="36dp"
                android:text="@string/materi6"
                android:textColor="@color/fontsubbabmateri"
                android:textSize="14dp" />
